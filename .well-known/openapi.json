{
    "openapi": "3.0.1",
    "info": {
      "title": "Workout/Schedule/Profile reader/modifier Plugin",
      "description": "A plugin for that allows users to create, read, update, and delete their workout schedules and profiles using the open-assistant chatbot",
      "version": "v1"
    },
    "servers": [
      {
        "url": "https://scary-fashion-eel.cyclic.app"
      }
    ],
    "paths": {
      "/addUser": {
        "post": {
          "summary": "Adds a new user",
          "description": "This route adds a new user to the database",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": { "type": "string" },
                    "email": { "type": "string" }
                  }
                },
                "example": {
                  "name": "John Doe",
                  "email": "john@doe.com"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Successful operation"
            },
            "400": {
              "description": "Error occurred"
            }
          }
        }
      },
      "/getUser/{userid}": {
        "get": {
          "tags": ["Users"],
          "summary": "Retrieve a user",
          "description": "This route retrieves a user from the database based on their id",
          "parameters": [{
            "in": "path",
            "name": "userid",
            "schema": { "type": "string" },
            "required": true,
            "description": "The id of the user to retrieve"
          }],
          "responses": {
            "200": {
              "description": "Successful operation"
            },
            "400": {
              "description": "Error occurred"
            }
          }
        }
      }
    }
}